import tkinter as tk




def countplusone():
    count = 1
    count += 1

def button_clicked():
    countplusone()
    label.config(count)
    


root = tk.Tk()
root.title("Plotting")
root.geometry("400x300")

label = tk.Label(root, text="ClickCounter TT", font=("Calibri", 14))
label.pack(pady="10")

button = tk.Button(root, text="Click Me", command=button_clicked)
button.pack(pady=10)

root.mainloop()